<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.WelcomeActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="1.0" android:contentDescription="@string/background_image"/>
    <ImageView
            android:layout_width="137dp"
            android:layout_height="46dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter" android:contentDescription="Logo"/>
    <TextView
            android:text="GO ALL IN"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:id="@+id/textView" android:textSize="65sp"
            android:textColor="@android:color/white" android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/montserrat"
    />
    <TextView
            android:text="ON GOING ALL OUT"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/textView3" android:textSize="30sp"
            android:textColor="@android:color/white" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textStyle="bold"
            android:textAlignment="center" android:fontFamily="@font/montserrat"/>
    <TextView
            android:text="Find a team in your city &amp; dominate the league"
            android:layout_width="334dp"
            android:layout_height="51dp"
            android:id="@+id/textView2" android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/montserrat" android:singleLine="false"
            android:textSize="18sp" android:textAlignment="center" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:id="@+id/getStartedBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:textSize="18sp" android:fontFamily="@font/montserrat" android:layout_height="60dp"
            android:textStyle="bold" android:textAllCaps="true" android:textAlignment="center"
            android:textColor="@android:color/background_light" android:background="@drawable/swoosh_button"/>
</android.support.constraint.ConstraintLayout>